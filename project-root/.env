# ======================================
#            ОСНОВНЫЕ НАСТРОЙКИ
# ======================================

# Порт для Express-сервера
PORT=5000

# URL клиентского приложения (для CORS)
CLIENT_URL=http://localhost:3000

# ======================================
#         НАСТРОЙКИ БАЗЫ ДАННЫХ
# ======================================

# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/game_db

# ======================================
#         АУТЕНТИФИКАЦИЯ JWT
# ======================================

# Секретный ключ для подписи JWT-токенов
JWT_SECRET=your_strong_secret_key_here

# Время жизни токена (например, 1 час)
JWT_EXPIRES_IN=1h

# ======================================
#       НАСТРОЙКИ ИГРОВОГО ЦИКЛА
# ======================================

# Включение/выключение игрового цикла
ENABLE_GAME_LOOP=true

# Длительность фазы ставок (в миллисекундах)
BETTING_PHASE_DURATION=35000

# Длительность фазы обработки (в миллисекундах)
RESULT_PHASE_DURATION=10000

# Длительность фазы перерыва (в миллисекундах)
BREAK_PHASE_DURATION=17500

# ======================================
#        НАСТРОЙКИ ИГРОВОЙ ЛОГИКИ
# ======================================

# Максимальная сумма ставки
MAX_BET_AMOUNT=50000

# Комиссия казино (в долях)
CASINO_COMMISSION=0.10

# Вероятность выпадения джокера (в долях)
JOKER_PROBABILITY=0.05

# ======================================
#      НАСТРОЙКИ ТАБЛИЦЫ ЛИДЕРОВ
# ======================================

# Интервал обновления таблицы лидеров (в миллисекундах)
LEADERBOARD_UPDATE_INTERVAL=300000  # 5 минут

# Количество игроков в таблице лидеров
LEADERBOARD_LIMIT=100

# ======================================
#          РЕЖИМ РАЗРАБОТКИ
# ======================================

# Уровень логирования (debug, info, warn, error)
LOG_LEVEL=debug

# Отладочный режим Socket.io
SOCKET_DEBUG=false